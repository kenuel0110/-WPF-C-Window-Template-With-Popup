<Page x:Class="WindowTemplateWithPopup.Pages.Page_main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WindowTemplateWithPopup.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_main">

    <Grid>
        <StackPanel Margin="25" Orientation="Vertical">
            <TextBlock Style="{StaticResource textblock_header}" Text="{StaticResource greeteng}"/>
            <StackPanel Margin="0 15" Orientation="Horizontal">
                <Button x:Name="btn_change_language" Click="btn_change_language_Click" Content="{StaticResource button_change_language}" Style="{StaticResource button_main}" Margin="5"/>
                <Button x:Name="btn_open_popup" Click="btn_open_popup_Click"  Content="{StaticResource button_open_popup}" Style="{StaticResource button_main}" Margin="5"/>
                <Button x:Name="btn_open_small_popup" Click="btn_open_small_popup_Click" Content="{StaticResource button_open_small_popup}" Style="{StaticResource button_main}" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
